<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mine_friend_data_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.3dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/friends_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/friends_username"
            android:layout_below="@+id/friends_username"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="4dp"
            android:fontFamily="casual"
            android:singleLine="true"
            android:text="Hi! I'm using TuChat App"

            android:textSize="12sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/friends_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/profile_icon"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="0.5dp" />

        <TextView
            android:id="@+id/friends_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/friends_profile_image"
            android:layout_marginStart="14dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/friends_profile_image"
            android:fontFamily="sans-serif-condensed"
            android:text="username"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friends_lastseen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/friends_status"
            android:layout_alignBottom="@+id/friends_status"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-condensed"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:text="Hi! I'm using TuChat App"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friends_online_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/friends_lastseen"
            android:layout_alignTop="@+id/friends_username"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="online"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>



</android.support.v7.widget.CardView>