<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_conversations_data_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.3dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chat_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/chat_username"
            android:layout_below="@+id/chat_username"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="4dp"
            android:fontFamily="cursive"
            android:singleLine="true"
            android:text="Hi! I'm using TuChat App"

            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chat_profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/profile_icon"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="0.5dp" />

        <TextView
            android:id="@+id/chat_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chat_profile_image"
            android:layout_marginStart="13dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/chat_profile_image"
            android:fontFamily="sans-serif-condensed"
            android:text="username"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chat_online_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chat_status"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="online"
            android:textColor="?android:attr/colorControlActivated"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </RelativeLayout>

</android.support.v7.widget.CardView>